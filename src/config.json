{
    "sounding_file": "data/windy_sounding_example.json",
    "title": "Source: data/windy_sounding_example.json",
    "figsize": [15, 10],
    "skewt": {
        "title": "skew-t of radio sounding",
        "grid": true,
        "legend": true,
        "xlim": [-40, 30],
        "ylim": [1000, 100],
        "functionalities": {
            "show_cape_cin": true,
            "show_params": true,
            "show_equiv_pot_temp": true,
            "show_wb_temp": true,
            "show_wb_pot_temp": true
        }
    },
    "hodograph": {
        "component_range": 40,
        "grid_increment": 10
    }, 
    "default_ranges": {
        "pressure": [10, 1000],
        "temp": [175, 330],
        "dewpoint": [150, 300],
        "gpheight": [0, 15000],
        "wind_u": [-60, 60],
        "wind_v": [-60, 60]
    },
    "param_display": {
        "general": {
            "abs_position": [0.65, 0.40],
            "headline_elevation": 0.01,
            "indent": 0.01,
            "line_spacing": 0.02,
            "key_val_spacing": 0.04
        },
        "categories": {
            "points": {
                "headline": "POINTS",
                "rel_position": [0, 0],
                "unit": ["\u00B0C", " hPa"]
            },
            "cape_cin": {
                "headline": "CAPE & CIN",
                "rel_position": [0, -0.12],
                "unit": " j/kg"
            },
            "temperatures": {
                "headline": "TEMPERATURES",
                "rel_position": [0, -0.2],
                "unit": "\u00B0K"
            },
            "indices": {
                "headline": "INDICES",
                "rel_position": [0.16, 0],
                "unit": "",
                "key_val_spacing": 0.08
            }
        }  
    }
}